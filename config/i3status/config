general {
  output_format = "i3bar"
  interval = 5
}

order = "ethernet _first_"
order += "load"
order += "cpu_temperature 1"
order += "disk /"
order += "tztime local"

ethernet _first_ {
  format_up = "E: %ip"
  format_down = "E: down"
}

load {
  format = "CPU: %1min %5min %15min"
}

cpu_temperature 1 {
  format = "%degrees Â°C"
  path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
}

disk "/" {
  format = "Disk: %free"
}

tztime local {
  format = "%d.%m.%Y (%B) %H:%M:%S"
}
